<mvc:View
 controllerName="sap.ui.demo.walkthrough.controller.TaskList"
 xmlns="sap.m"
 xmlns:core="sap.ui.core"
 xmlns:mvc="sap.ui.core.mvc">
     <List
         id="invoiceList"
         inset="true"
         headerText="{i18n>invoiceListTitle}"
         noDataText="{i18n>noTask}"
         class="saUiResponsiveMargin"
         width="auto"
         items="{
            path : '/todos',
            sorter : {
                path : 'priority',
                descending : false,
                group: '.getPriority'
            }
         }" >
         
         <headerToolbar>
            <Toolbar>
                <Input
                    value="{/addTask}"
                    submit="onAddTask"
                    placeholder="{i18n>ToolbarInputPlaceholder}"/>
                <ComboBox 
                    id="priorityCombobox" 
                    placeholder="{i18n>PriorityPlaceholder}"
                    selectionSubmit="onAddTask" >
                    <items>
                        <core:Item key="priority-high-key" 
                            text="High"  id="priority-high"/>
                        <core:Item key="priority-medium-key" 
                            text="Medium"  id="priority-medium"/>
                        <core:Item key="priority-low-key" 
                            text="Low"  id="priority-low"/>
                    </items>
                </ComboBox>
                <DatePicker 
                    id="datePicker" 
                    minDate="{/currentDate}"
                    submit="onAddTask"
                />
                
                <Button
                    text="{i18n>AddTask}"
                    enabled="{= ${/addTask}.length > 0}"
                    type="Transparent"
                    press="onAddTask"
                />
            </Toolbar>
         </headerToolbar>
         <CustomListItem>
            <HBox
                justifyContent="Start">
                <CheckBox 
                    select="onTaskDone"
                    selected="{isDone}"/>
                <FormattedText 
                    htmlText="{text}" 
                    class="sapUiSmallMargin myCustomTaskText">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </FormattedText>
                <FormattedText 
                    htmlText="{i18n>validUntil} {due}" 
                    class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
                <Button
                    icon="sap-icon://decline"
                    press="onDeleteTask"
                    class="marginRight"
                    type="Transparent"
                />
            </HBox>
         </CustomListItem>
     </List>
 </mvc:View>