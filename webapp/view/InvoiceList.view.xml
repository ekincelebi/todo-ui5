<mvc:View
 controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
 xmlns="sap.m"
 xmlns:mvc="sap.ui.core.mvc">
     <List
         id="invoiceList"
         mode="Delete"
         headerText="{i18n>invoiceListTitle}"
         noDataText="{i18n>noTask}"
         class="saUiResponsiveMargin"
         width="auto"
         items="{
            path : '/todos',
            sorter : {
                path : 'time',
                descending: 'true'
            }
         }" >

         
         <headerToolbar>
            <Toolbar>
                <Input
                    value="{/addTask}"
                    submit="onAddTask"
                    placeholder="{i18n>ToolbarInputPlaceholder}"/>
                <Button
                    text="Add"
                    enabled="{= ${/addTask}.length > 0}"
                    type="Transparent"
                    press="onAddTask"
                  />
                <!--<Title text="{i18n>todoListTitle}"/>
                <ToolbarSpacer/>
                <SearchField width="50%" search=".onFilterInvoices"/>-->
            </Toolbar>
         </headerToolbar>
         <CustomListItem>
            <HBox
                justifyContent="Start">
                <CheckBox 
                    select=""
                    selected=""/>
                <Input value="{text}" 
                        submit="onRenameDone">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </Input>
                <FormattedText 
                    htmlText="{ path: 'time',
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                    source: {pattern: 'yyyy-MM-ddTHH:mm:ss.SSSX'},
                                    style: 'medium'
                                }
                            }" 
                    class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
            </HBox>
         </CustomListItem>
     </List>
 </mvc:View>