<mvc:View
 controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
 xmlns="sap.m"
 xmlns:mvc="sap.ui.core.mvc">
     <List
         id="invoiceList"
         headerText="{i18n>invoiceListTitle}"
         noDataText="{i18n>noTask}"
         class="saUiResponsiveMargin"
         width="auto"
         items="{/todos}" >
         <headerToolbar>
            <Toolbar>
                <Input
                    value="{/addTask}"
                    submit="onAddTask"
                    placeholder="{i18n>ToolbarInputPlaceholder}"/>
                <Button
                    text="Add"
                    enabled="{= ${/addTask}.length > 0}"
                    type="Transparent"
                    press="onAddTask"
                  />
                <!--<Title text="{i18n>todoListTitle}"/>
                <ToolbarSpacer/>
                <SearchField width="50%" search=".onFilterInvoices"/>-->
            </Toolbar>
         </headerToolbar>
            </ObjectListItem>
         <CustomListItem>
            <HBox
                justifyContent="Start">
                <CheckBox 
                    select=""
                    selected=""/>
                <Input value="{text}">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </Input>
            </HBox>
         </CustomListItem>
     </List>
 </mvc:View>